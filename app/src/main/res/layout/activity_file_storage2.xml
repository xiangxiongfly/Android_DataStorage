<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storage.FileStorage2Activity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="checkScopedStorage"
                android:text="是否开启分区存储" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="saveImage"
                android:text="保存图片到相册" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getImage"
                android:text="获取图片" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="deleteImage"
                android:text="删除图片" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="updateImage"
                android:text="修改图片" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="getAllImage"
                android:text="获取所有图片" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="100dp"
                android:layout_height="100dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="saveDownload"
                android:text="保存到Download目录" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="pickImage"
                android:text="使用系统文件选择器" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="copyImage"
                android:text="复制图片到本应用程序下" />
        </LinearLayout>
    </ScrollView>
</FrameLayout>