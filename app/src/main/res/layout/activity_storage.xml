<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".storage.StorageActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="内部存储" />

        <Button
            android:id="@+id/inner_storage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取内部存储一些信息" />

        <Button
            android:id="@+id/inner_storage_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内部存储写入数据" />

        <Button
            android:id="@+id/inner_storage_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="内部存储读取数据" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="外部存储" />

        <Button
            android:id="@+id/outer_storage_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="获取外部私有存储一些信息" />

        <Button
            android:id="@+id/outer_storage_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="外部存储写入数据" />

        <Button
            android:id="@+id/outer_storage_read"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="外部存储读取数据" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="外部非私有存储" />

        <Button
            android:id="@+id/outer_storage_public_write"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="外部非私有存储写入数据" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:text="分区存储" />

        <Button
            android:id="@+id/external_storage_manager_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分区存储一些信息" />

        <Button
            android:id="@+id/mediastore_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分区存储保存数据" />

        <Button
            android:id="@+id/mediastore_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分区存储查询数据" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/mediastore_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分区存储删除数据" />

        <Button
            android:id="@+id/mediastore_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="分区存储修改数据" />

        <Button
            android:id="@+id/scoped_storage_saf"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SAF" />

        <ImageView
            android:id="@+id/safImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/request_all_file_permission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="对SD所有文件授权" />

        <Button
            android:id="@+id/test"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试SD权限" />

        <Button
            android:id="@+id/test2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="测试SD权限2" />

    </LinearLayout>

</ScrollView>